<h2>Follow User</h2>
<% if @users.exists? %>


<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
						<th colspan="3"></th>
						<th colspan="3"></th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><p><%= image_tag user.get_profile_image(40,40) %></p></td>
						<td><p><%= user.name %></p></td>
						<td><%= link_to "Show", user_path(user.id) %></td>
						<td></td>
						<td></td>
						<td>
							<% if current_user != user %>
					        <% if user.followed_by?(current_user) %>
					            <p><%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete, class: 'btn btn-success' %></p>
					        <% else %>
					            <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post, class: 'btn btn-success' %></p>
					        <% end %>
    					<% end %>
    				</td>
					</tr>
					<% end %>
				</tbody>
			</table>

	<% else %>
      <p>ユーザーはいません</p>
    <% end %>